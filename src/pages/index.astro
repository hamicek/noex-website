---
import FullPageLayout from '../layouts/FullPageLayout.astro';
import { useTranslations, getTranslations } from '../i18n/utils';
import Hero from '../components/sections/Hero.svelte';
import WhyNoex from '../components/sections/WhyNoex.svelte';
import ProblemStatement from '../components/sections/ProblemStatement.svelte';
import CoreFeatures from '../components/sections/CoreFeatures.svelte';
import AdvancedPatterns from '../components/sections/AdvancedPatterns.svelte';
import Application from '../components/sections/Application.svelte';
import BuiltInServices from '../components/sections/BuiltInServices.svelte';
import Observability from '../components/sections/Observability.svelte';
import Distribution from '../components/sections/Distribution.svelte';
import CodePlayground from '../components/sections/CodePlayground.svelte';
import CallToAction from '../components/sections/CallToAction.svelte';

const locale = 'en';
const t = useTranslations(locale);
const translations = getTranslations(locale);
---

<FullPageLayout locale={locale} currentPath="/">
  <!-- Section 1: Hero -->
  <Hero translations={translations.hero} client:load />

  <!-- Section 2: Why noex -->
  <WhyNoex translations={translations.whyNoex} client:visible />

  <!-- Section 3: Problem Statement -->
  <ProblemStatement translations={translations.problem} client:visible />

  <!-- Section 3: Core Features -->
  <CoreFeatures translations={translations.features} client:visible />

  <!-- Section 4: Advanced Patterns -->
  <AdvancedPatterns translations={translations.patterns} client:visible />

  <!-- Section 5: Application -->
  <Application translations={translations.application} client:visible />

  <!-- Section 6: Built-in Services -->
  <BuiltInServices translations={translations.services} client:visible />

  <!-- Section 7: Observability -->
  <Observability translations={translations.observability} client:visible />

  <!-- Section 8: Distribution -->
  <Distribution translations={translations.distribution} client:visible />

  <!-- Section 9: Code Playground -->
  <CodePlayground translations={translations.playground} client:visible />

  <!-- Section 10: Call to Action -->
  <CallToAction translations={translations.cta} footerTranslations={translations.footer} supportTranslations={translations.support} client:visible />
</FullPageLayout>
